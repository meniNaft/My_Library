@model My_Library.Views.Libraries.ViewModels.CreateViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Library</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.Library.Name" class="control-label"></label>
                <input asp-for="@Model.Library.Name" class="form-control" />
                <span asp-validation-for="@Model.Library.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Library.Width" class="control-label"></label>
                <input asp-for="@Model.Library.Width" class="form-control" />
                <span asp-validation-for="@Model.Library.Width" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Library.Height" class="control-label"></label>
                <input asp-for="@Model.Library.Height" class="form-control" />
                <span asp-validation-for="@Model.Library.Height" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Library.GenreId" class="control-label"></label>
                <select id="genderSelect" asp-for="@Model.Library.GenreId" class="form-control" asp-items="ViewBag.GenreId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
<input type="hidden" id="errorMessage" value="@Model.ErrorModel?.Message" />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
@await Html.PartialAsync("Components/ErrorModal")
<script src="~/lib/jquery/dist/jquery.min.js"></script>

<script>
    $(document).ready(function () {
        debugger;
        var errorMessage = $('#errorMessage').val();
        if (errorMessage) {
            $('#genderSelect').prop('disabled', true);
            $('#message').text(errorMessage);
            $('#errorModal').modal('show');
        }
    });
</script>
